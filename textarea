<!-- Assuming mat-cell is used to display the cell value -->
<td mat-cell *matCellDef="let element">
  <!-- Check if editing is allowed -->
  <ng-container *ngIf="element.isEditing; else displayMode">
    <!-- Display the textarea when editing is enabled -->
    <textarea [(ngModel)]="element.text"></textarea>
    <!-- Save and cancel icons -->
    <button (click)="saveText(element)">Save</button>
    <button (click)="cancelEdit(element)">Cancel</button>
  </ng-container>
  <!-- If not editing, show the text -->
  <ng-template #displayMode>{{ element.text }}</ng-template>
  <!-- Edit icon, visible only if not editing -->
  <button *ngIf="!element.isEditing" (click)="startEdit(element)">Edit</button>
</td>

startEdit(element: YourDataType): void {
  element.isEditing = true;
}

saveText(element: YourDataType): void {
  // Save the text to the database or perform necessary actions
  element.isEditing = false;
}

cancelEdit(element: YourDataType): void {
  // Cancel editing, reset changes if needed
  element.isEditing = false;
}